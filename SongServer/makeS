
# This is a template Makefile generated by rpcgen

# Parameters
SHELL := bash
CLIENT = 
SERVER = server

SOURCES_CLNT.c = 
SOURCES_CLNT.h = interface2.h interface3.h
SOURCES_SVC.c = servidor.c
SOURCES_SVC.h = interface1.h
SOURCES.x = interface1.x interface2.x interface3.x

TARGETS_SVC.c = interface1_svc.c  interface1_xdr.c  interface2_clnt.c interface2_xdr.c  interface3_clnt.c interface3_xdr.c
TARGETS_CLNT.c = interface2_clnt.c interface2_xdr.c  interface3_clnt.c interface3_xdr.c 
TARGETS = interface1_xdr.c interface1_svc.c interface2_clnt.c interface2_xdr.c  interface3_clnt.c interface3_xdr.c interface1.h interface2.h interface3.h 
RESIDUALS = interface1_clnt.c interface2_svc.c interface3_svc.c

OBJECTS_CLNT = $(SOURCES_CLNT.c:%.c=%.o) $(TARGETS_CLNT.c:%.c=%.o)
OBJECTS_SVC = $(SOURCES_SVC.c:%.c=%.o) $(TARGETS_SVC.c:%.c=%.o)
# Compiler flags for debian
# CFLAGS += -g 
# LDLIBS += -lnsl

# Compiler flags for Arch
CFLAGS += -g -I /usr/include/tirpc
LDLIBS += -lnsl -ltirpc

RPCGENFLAGS = 

# Targets 

all : $(CLIENT) $(SERVER)

$(TARGETS) : $(SOURCES.x) 
	@for line in $(SOURCES.x); do rpcgen $(RPCGENFLAGS) $$line; done
	$(RM) $(RESIDUALS)

$(OBJECTS_CLNT) : $(SOURCES_CLNT.c) $(SOURCES_CLNT.h) $(TARGETS_CLNT.c) 

$(OBJECTS_SVC) : $(SOURCES_SVC.c) $(SOURCES_SVC.h) $(TARGETS_SVC.c) 

$(CLIENT) : $(OBJECTS_CLNT) 
	$(LINK.c) -o $(CLIENT) $(OBJECTS_CLNT) $(LDLIBS) 

$(SERVER) : $(OBJECTS_SVC) 
	$(LINK.c) -o $(SERVER) $(OBJECTS_SVC) $(LDLIBS)

clean:
	$(RM) core $(TARGETS) $(OBJECTS_CLNT) $(OBJECTS_SVC) $(CLIENT) $(SERVER)

